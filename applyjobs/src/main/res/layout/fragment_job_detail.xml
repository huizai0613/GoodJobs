<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/window_background">

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/job_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/job_detail_collect_but_selector"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"/>

        <TextView
            android:id="@+id/job_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/job_detail_send_but_selector"
            android:gravity="center"
            android:text="发送简历"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_15">

                <TextView
                    android:id="@+id/job_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Android开发"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/job_cro"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_bg"
                    android:drawableRight="@drawable/r_icon"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_5"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/font_size_13"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_belong"
                        style="@style/job_detail_tv"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_address"
                        style="@style/job_detail_tv"
                        />

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_salary"
                        style="@style/job_detail_tv"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_work_time"
                        style="@style/job_detail_tv"
                        android:text="部分:合肥办事处"
                        />

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_degree"
                        style="@style/job_detail_tv"
                        android:text="部分:合肥办事处"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_gender"
                        style="@style/job_detail_tv"
                        android:text="部分:合肥办事处"
                        />

                    <cn.goodjobs.common.view.BabushkaText
                        android:id="@+id/job_age"
                        style="@style/job_detail_tv"
                        android:text="部分:合肥办事处"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/job_bright_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="职位亮点"
                    android:textColor="@color/bule_low_color"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold"/>


                <cn.goodjobs.common.view.XCFlowLayout
                    android:id="@+id/job_bright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ></cn.goodjobs.common.view.XCFlowLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_marginTop="2dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="工作说明"
                    android:textColor="@color/bule_low_color"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/job_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/job_other_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/space_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="其他待遇"
                    android:textColor="@color/bule_low_color"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/job_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/list_item_bg"
                android:orientation="vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="5dip"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@drawable/r_icon"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/space_15"
                    android:text="相似职位"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14"
                    />

                <View
                    style="@style/line"
                    ></View>

                <LinearLayout
                    android:id="@+id/job_similar_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/space_10"/>

        </LinearLayout>
    </ScrollView>


    <cn.goodjobs.common.view.empty.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></cn.goodjobs.common.view.empty.EmptyLayout>

</RelativeLayout>
