<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <cn.goodjobs.common.view.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnFooter1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_bg"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="@dimen/bottom_menu_padding">

            <ImageView
                android:id="@+id/btnImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/campus_footer1" />

            <TextView
                android:id="@+id/btnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_menu_top"
                android:gravity="center"
                android:text="首页"
                android:textColor="@drawable/campus_footer_text"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnFooter2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_bg"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="@dimen/bottom_menu_padding">

            <ImageView
                android:id="@id/btnImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/campus_footer2" />

            <TextView
                android:id="@id/btnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_menu_top"
                android:gravity="center"
                android:text="宣讲会"
                android:textColor="@drawable/campus_footer_text"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnFooter3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_bg"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="@dimen/bottom_menu_padding">

            <ImageView
                android:id="@id/btnImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/campus_footer3" />

            <TextView
                android:id="@id/btnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_menu_top"
                android:gravity="center"
                android:text="招聘会"
                android:textColor="@drawable/campus_footer_text"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnFooter4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/list_item_bg"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="@dimen/bottom_menu_padding">

            <ImageView
                android:id="@id/btnImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/campus_footer4" />

            <TextView
                android:id="@id/btnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottom_menu_top"
                android:gravity="center"
                android:text="个人中心"
                android:textColor="@drawable/campus_footer_text"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
