<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg">

    <ImageView
        android:id="@+id/iv_arrow"
        style="@style/right_arrow_base"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_small" />

    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_arrow"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="20000-29000元"
                android:textColor="@color/red"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_jobName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_salary"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/padding_default"
                android:paddingTop="@dimen/padding_small"
                android:text="会议兼职"
                android:textColor="@color/main_color"
                android:textSize="@dimen/text_default" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_where"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_default"
                android:paddingTop="@dimen/padding_small"
                android:text="工作地点："
                android:textColor="@color/light_color"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_where"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingTop="@dimen/padding_small"
                android:text="六安市"
                android:textColor="@color/light_color"
                android:textSize="@dimen/text_small" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_default"
                android:paddingRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:text="2015-12-21"
                android:textColor="@color/light_color"
                android:textSize="@dimen/text_small" />


        </RelativeLayout>

    </LinearLayout>


    <View
        style="@style/line"
        android:layout_below="@id/ll_left"
        android:layout_marginTop="@dimen/padding_small" />


</RelativeLayout>
