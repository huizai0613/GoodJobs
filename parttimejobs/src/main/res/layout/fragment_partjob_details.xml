<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listitem="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="职位名称："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="招聘单位："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_default"
                android:background="@color/white"
                android:orientation="vertical">

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="薪酬待遇："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="工作地点："></cn.goodjobs.common.view.PartTimeItemView>

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_worktime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="工作时间："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="发布日期："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_enddate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="有效日期："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_connect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="联  系  人："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:id="@+id/piv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:isCall="true"
                    listitem:tvtitle="联系电话："></cn.goodjobs.common.view.PartTimeItemView>

                <View style="@style/line" />

                <cn.goodjobs.common.view.PartTimeItemView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    listitem:tvtitle="详细要求："></cn.goodjobs.common.view.PartTimeItemView>

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_default"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_default" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>