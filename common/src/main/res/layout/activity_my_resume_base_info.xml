<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listitem="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/padding_small"
            android:background="@color/white">
            <View style="@style/line"/>
            <cn.goodjobs.common.view.searchItem.InputItemView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                listitem:tvtitle="姓        名"
                listitem:important="visible"
                listitem:hint="请输入姓名"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/list_item_bg">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="@dimen/padding_default"
                        android:layout_height="2dip"/>
                    <TextView
                        android:id="@+id/tvNecessity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dip"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_small"/>
                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="26dip"
                        android:layout_height="26dip"
                        android:layout_marginRight="@dimen/padding_small"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_searchtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_small"
                        android:text="性        别"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/text_default"/>
                    <View
                        android:id="@+id/hline"
                        android:layout_marginRight="8dip"
                        android:layout_width="0.5dip"
                        android:layout_height="14dip"
                        android:background="@color/light_color"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioGroup
                        android:id="@+id/sexGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkedButton="@+id/radioMan"
                        android:layout_marginRight="@dimen/padding_small"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radioMan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="男"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/main_color"/>
                        <RadioButton
                            android:id="@+id/radioWuman"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="女"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/main_color"/>
                    </RadioGroup>

                    <ImageButton
                        android:id="@+id/btnClear"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:src="@drawable/icon_clear"
                        android:scaleType="fitCenter"
                        android:padding="2dip"
                        android:background="@color/transparent"
                        android:layout_marginRight="@dimen/padding_default"
                        android:visibility="invisible"/>
                </LinearLayout>
                <View
                    android:id="@+id/line"
                    android:layout_marginLeft="12dip"
                    android:layout_alignParentBottom="true"
                    style="@style/line"/>
            </RelativeLayout>
            <cn.goodjobs.common.view.searchItem.SearchItemView
                android:id="@+id/itemBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="出生日期"
                listitem:hint="请选择出生日期"
                listitem:important="visible"/>
            <cn.goodjobs.common.view.searchItem.SelectorItemView
                android:id="@+id/itemHukou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="户        口"
                listitem:source="jobloc_pro;jobloc_city"
                listitem:hint="请选择户口地"
                listitem:important="visible"/>
            <cn.goodjobs.common.view.searchItem.SelectorItemView
                android:id="@+id/itemAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="现居住地"
                listitem:source="jobloc_pro;jobloc_city;jobloc_district"
                listitem:hint="请选择现居住地"
                listitem:important="visible"/>
            <cn.goodjobs.common.view.searchItem.SelectorItemView
                android:id="@+id/itemDegree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="学        历"
                listitem:source="degree"
                listitem:hint="请选择学历"
                listitem:important="visible"/>
            <cn.goodjobs.common.view.searchItem.SelectorItemView
                android:id="@+id/itemWorktime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="工作年限"
                listitem:source="worktime"
                listitem:hint="请选择工作年限"
                listitem:important="visible"/>
            <cn.goodjobs.common.view.searchItem.InputItemView
                android:id="@+id/itemPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                listitem:tvtitle="手  机  号"
                listitem:important="invisible"
                listitem:inputtype="number"
                listitem:hint="请输入手机号"/>
            <cn.goodjobs.common.view.searchItem.InputItemView
                android:id="@+id/itemEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                listitem:tvtitle="邮        箱"
                listitem:important="invisible"
                listitem:inputtype="email"
                listitem:hint="请输入邮箱"/>
            <cn.goodjobs.common.view.searchItem.SelectorItemView
                android:id="@+id/itemSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="目前月薪"
                listitem:source="salary"
                listitem:hint="请选择目前月薪"
                listitem:important="invisible"/>
            <cn.goodjobs.common.view.searchItem.SearchItemView
                android:id="@+id/itemKeyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                listitem:tvtitle="关  键  字"
                listitem:hint="请输入您的简历关键字"
                listitem:important="invisible"
                listitem:showLine="false"/>
            <View style="@style/line"/>
            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/padding_default"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/text_default"
                android:background="@drawable/button_bg"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
