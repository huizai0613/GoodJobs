<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#59c0f5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:src="@mipmap/start_top_bg"
            android:scaleType="fitEnd"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:src="@drawable/logo_white"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_default"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lv_menu"
        android:layout_width="match_parent"
        android:layout_height="500dip"
        android:orientation="horizontal"
        android:padding="8dip">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dip"
            android:orientation="vertical">
            <cn.goodjobs.common.view.imagemenu.MyImageView
                android:id="@+id/menuQuanzhi"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:scaleType="matrix"
                android:layout_weight="3"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dip"/>
            <cn.goodjobs.common.view.imagemenu.MyImageView
                android:id="@+id/menuLanling"
                android:layout_width="match_parent"
                android:scaleType="matrix"
                android:layout_height="0dip"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <cn.goodjobs.common.view.imagemenu.MyImageView
                android:id="@+id/menuXiaoyuan"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:scaleType="matrix"
                android:layout_weight="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dip"/>
            <cn.goodjobs.common.view.imagemenu.MyImageView
                android:id="@+id/menuLietou"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:scaleType="matrix"
                android:layout_weight="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dip"/>
            <cn.goodjobs.common.view.imagemenu.MyImageView
                android:id="@+id/menuJianzhi"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:scaleType="matrix"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
